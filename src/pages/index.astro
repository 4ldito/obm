---
import Background from "../components/Background.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Oblivion Mechanics">
  <Background>
    <img class="capsule" src="/images/capsule.png" alt="Capsula"/>

    <img class="eagle" src="/images/gear_eagle.png" alt="Águila"/>

    <img class="obm-full-logo" src="/images/obm_full_logo.png" alt="Logo de Oblivion Mechanics"/>

    <img class="zeppelin" src="/images/zeppelin.png" alt="Zeppelin"/>

    <img class="big-gear" src="/images/gear_2.png" alt="Engranaje"/>
    <img class="medium-gear" src="/images/gear_1.png" alt="Engranaje"/>
    <img class="small-gear" src="/images/gear_3.png" alt="Engranaje"/>

    <img class="sharp-white" src="/images/sharp_white.png" alt="Sharp"/>
    <img class="sharp-blue" src="/images/sharp_blue.png" alt="Sharp"/>

    <img class="univearth-full-logo" src="/images/univearth_logo.png" alt="Logo de UniVearth"/>

    <img class="idk" src="/images/idk.png" alt="no sé que sea esto"/>
  </Background>
</Layout>

<style>
  img {
    position: absolute;
  }

  .capsule {
    top: -5%;
    left: -12%;
  }

  .eagle {
    top: 15%;
    left: 50%;
  }
  .obm-full-logo {
    width: 1008px;
    top: 20%;
  }

  .zeppelin {
    top: 55%;
    right: 13%;
  }

  
  .big-gear {
    left: 14%;
    bottom: 28%;
  }

  .medium-gear {
    left: 10%;
    bottom: 32%;
  }

  .small-gear {
    left: 11%;
    bottom: 27%;
  }

  .sharp-white {
    bottom: 8%;
    left: -5%;
  }

  .sharp-blue {
    bottom: 8%;
    left: 0%;
  }

  .univearth-full-logo {
    width: 630px;
    bottom: 20%;
  }

  .idk {
    bottom: -29%;
    right: -39%;
  }
</style>
